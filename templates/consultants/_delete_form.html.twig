<form method="post" action="{{ path('consultants_delete', {'id': consultant.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultant.id) }}">
    <button class="btn-lg btn-danger fas fa-trash-alt"></button>
</form>
