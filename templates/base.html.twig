                      timepicker:false,
                      lang:'fr'
                    });
                  $('.timepicker').datetimepicker(
                    {
                      format:'H:i',
                      timepicker:true,
                      datepicker:false,
                      lang:'fr'
                    });
              } );
          </script>
        {% endblock %}
    </body>
</html>
