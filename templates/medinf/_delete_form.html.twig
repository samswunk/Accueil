<form class="col-2" method="post" action="{{ path('medinf_delete', {'id': medinf.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medinf.id) }}">
    <button class="btn-lg btn-danger"><i class="fas fa-trash"></i></button>
</form>
