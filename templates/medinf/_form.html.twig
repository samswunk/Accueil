{{ form_start(form) }}
<div class="form-group col-12">
    <div class="form-group row col-12">
        <div class="col-12 mb-3">
            <h1>{{ form.vars.value.nom }} {{ form.vars.value.prenom }}</h1>
        </div>
        <div class="col-3">
            {{ form_row(form.matricule,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-3">
            {{ form_row(form.nom,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-3">
            {{ form_row(form.prenom,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col-3">
            {{ form_row(form.telmedinf,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row col-12">
        <div class="col-12">
            {{ form_row(form.adresse,{'attr':{'class':'form-control'}}) }}
        </div>    
        {{ form_widget(form) }}
    </div>
    <div class="col-12 form-group">
        <a href="{{ path('medinf_index') }}" class="btn btn-sm btn-dark offset-4"><i class="fas fa-arrow-circle-left"></i></a>
        <button class="btn btn-sm btn-success"><i class="far fa-save"></i></button>
        {% if form.vars.value.id %}
            {{ include('medinf/_delete_form.html.twig') }}
        {% endif %}
    </div>    
</div>
{{ form_end(form, {'render_rest': false}) }}
