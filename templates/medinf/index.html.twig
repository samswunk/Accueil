{% extends 'base.html.twig' %}

{% block title %}Medinf index{% endblock %}

{% block body %}
    <h1>Medinf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telpro</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medinf in medinfs %}
            <tr>
                <td>{{ medinf.id }}</td>
                <td>{{ medinf.matricule }}</td>
                <td>{{ medinf.nom }}</td>
                <td>{{ medinf.prenom }}</td>
                <td>{{ medinf.adresse }}</td>
                <td>{{ medinf.telpro }}</td>
                <td>
                    <a href="{{ path('medinf_show', {'id': medinf.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('medinf_edit', {'id': medinf.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('medinf_new') }}">Create new</a>
{% endblock %}
