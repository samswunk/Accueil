{% extends 'base.html.twig' %}

{% block title %}Convocations index{% endblock %}

{% block body %}
    <h1>Convocations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbrpersonnes</th>
                <th>Dateconvocation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for convocation in convocations %}
            <tr>
                <td>{{ convocation.id }}</td>
                <td>{{ convocation.nbrpersonnes }}</td>
                <td>{{ convocation.dateconvocation ? convocation.dateconvocation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('convocations_show', {'id': convocation.id}) }}">show</a>
                    <a href="{{ path('convocations_edit', {'id': convocation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('convocations_new') }}">Create new</a>
{% endblock %}
