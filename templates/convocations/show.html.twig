{% extends 'base.html.twig' %}

{% block title %}Convocations{% endblock %}

{% block body %}
    <h1>Convocations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ convocation.id }}</td>
            </tr>
            <tr>
                <th>Nbrpersonnes</th>
                <td>{{ convocation.nbrpersonnes }}</td>
            </tr>
            <tr>
                <th>Dateconvocation</th>
                <td>{{ convocation.dateconvocation ? convocation.dateconvocation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('convocations_index') }}" class="btn btn-sm btn-secondary"><i class="fas fa-backspace"></i></a>

    <a href="{{ path('convocations_edit', {'id': convocation.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>

    {{ include('convocations/_delete_form.html.twig') }}
{% endblock %}
