{% extends 'base.html.twig' %}

{% block title %}Fonction index{% endblock %}

{% block body %}
    <h1>Fonction index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libfonction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                <td>{{ fonction.id }}</td>
                <td>{{ fonction.libfonction }}</td>
                <td>
                    <a href="{{ path('fonction_show', {'id': fonction.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('fonction_edit', {'id': fonction.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fonction_new') }}">Create new</a>
{% endblock %}
